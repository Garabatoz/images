---
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>{title}</title>
	</head>
	<body class="flex flex-col min-h-screen">
		<main class="flex-grow">
			<slot />
		</main>
		<Footer />
	</body>
</html>

<style is:global>
	html, body {
		margin: 0;
		padding: 0;
	}
</style>
